@font-face{
	font-family: FiraSans-Regular;
	src: url("fonts/FiraSans-Regular.ttf");
}

@font-face{
	font-family: Chunkfive;
	src: url("fonts/Chunkfive.otf");
}

@font-face{
	font-family: FiraSans-Medium;
	src: url("fonts/FiraSans-Medium.ttf");
}

@font-face{
	font-family: Quicksand-Regular;
	src: url("fonts/Quicksand-Regular.otf");
}

*{
	padding: 0;
	margin: 0;
}

.flex_container{
	display: flex;
	justify-content: center;
	align-items: center;
}

#root_container{
	width: 100%;
	height: 100%;
	position: absolute;
	background-color: #1E3E57;
}

#content_wrapper{
	width: 600px;
	height: auto;
	padding-bottom: 10px;
	background-color: ;
	margin-bottom: 100px;
}

#header_container{
	width: 100%;
	height: 80px;
	background: #000;
	margin-bottom: 10px;
	padding: 10px;
	padding-left: 0;
	padding-right: 0;
}

.header_content{
	float: left;
	background: #1E3E57;
	padding: 20px;
	font-family: FiraSans-Regular;
	font-size: 30px;
	margin-right: 10px;
	border-style: solid;
	border-width: 2px;
	border-color: #000;
}

.header_content.active{
	background-color: #000;
	border-color: #fff;
	color: #fff;
}

#form_container{
	width: 100%;
	height: auto;
	padding-top: 20px;
	background-color: #fff;
}

.input_container{
	width: 560px;
	height: 50px;
	background: red;
	margin-bottom: 20px;
	border-bottom-style: solid;
	border-bottom-width: 2px;
	border-bottom-color: #fff
}

.input_container.error{
	border-bottom-color: #C23A2E;
}

.input_field{
	width: calc(100% - 20px);
	height: 46px;
	padding: 10px;
	padding-top: 2px;
	padding-bottom: 2px;
	outline: none;
	border: none;
	background-color: #ECF0F1;
	font-family: FiraSans-Regular;
	font-size: 15px;
	color: #000;
	float: left;
}

.input_field:invalid{
	background-color: none;
	border: none;
	box-shadow: none;
}

.input_field.error{
	width: calc(100% - 70px);
	background-color: #DB544C;
}

.error_icon{
	width: 50px;
	height: 50px;
	background-color: #C23A2E;
	float: left;
}

#submit_button{
	width: 100%;
	height: 50px;
	padding: 0;
	background-color: #0192EE;
	color: #fff;
	transition: .2s background-color;
}

#submit_button:hover{
	background-color: #5FB3F9;
	cursor: pointer;
}
